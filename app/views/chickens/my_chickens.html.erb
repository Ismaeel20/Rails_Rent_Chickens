<%# <h1>Hello</h1> %>


<div class="container">
  <div class= "text-center font-weight-bold">
    <h1>Your chickens</h1>
  </div>

  <div class="chicken-create">
    <h3><%= link_to 'Add a Chicken', new_chicken_path %><h3>
    <h3><%= link_to 'Back to Chicken List', chickens_path %></h3>
    </p>
  </div>
</div>



<div class="cards">
  <% @chickens.each do |chicken| %>
  <div class="card text-center card-style" style="width: 18rem;">
  <% if chicken.photo.key %>
    <%= cl_image_tag chicken.photo.key, height: 300, crop: :fill %>
  <% else %>
    <img src="https://www.outdoorhappens.com/wp-content/uploads/2022/01/practical-yolkers.jpg" alt="" style="height: 300px;">
  <% end %>
      <div class="card-body ">
      <h3> <%= link_to chicken.breed, chicken_path(chicken) %> </h3>
      <%= link_to 'Edit Chicken', edit_chicken_path(chicken) %>
      <%= link_to 'Delete Chicken', chicken_path(chicken), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this chicken?' } %>
      </div>
  </div>
  <% end %>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
<lottie-player src="https://assets8.lottiefiles.com/packages/lf20_kp0ixjwm.json"  background="transparent"  speed="1"  style="width: 350px; height: 350px;"  loop  autoplay></lottie-player>
</div>
